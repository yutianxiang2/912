    function initParentModal() {
        $('#parentErrMsg').hide();
        $('#_CustomValue').parent().removeClass("has-error");
        $('#_CustomValue').val("");

        var CustomType = $('#_CustomType1').val().trim();
        if (CustomType == "作業位置") { $("#_CustomType").html("*作業位置"); }
        if (CustomType == "服務內容") { $("#_CustomType").html("*服務內容"); }
    
    }
    function submitParentModal() {
        var maxTextLength = 25;
        var maxTextAreaLength = 500;

        $('#parentErrMsg').hide();
        $('#_CustomValue').parent().removeClass("has-error");

        var CustomValue = $('#_CustomValue').val();

        if (CustomValue.length <= 0) {
            $('#parentErrMsg p').html('@Resources.Language.Custom_Value' + "@Resources.Language.IsNull");
            $('#_CustomValue').parent().addClass("has-error");
            $('#parentErrMsg').show();
            return;
        }
        //提交数据库
        $.ajax({
            type: "post",
            url:"/CustomData/AddCustomData",
            data: {
                'CustomName': $('.panel-title span:last').html(),
                'CustomValue': CustomValue,
               
            },//"oper=delete&id=" + gr,
            dataType: 'json',
            success: function (result) {

                $('#parent-modal').modal('hide')
                alert(result.message);

                $('#jqGrid').jqGrid('setGridParam',
                {
                    datatype: 'json',
                    url: "/CustomData/GetCustomData" + '?ctmName=' + $('.panel-title span:last').html(),
                }).trigger('reloadGrid');

                $("#jqGrid").jqGrid('setGridParam', { editurl: "/CustomData/AddEdit" + '?ctmName=' + $('.panel-title span:last').html() });

            },
            error: function (result) {
                console.log(result)
                try {
                    var json = $.parseJSON(result.responseText);
                    alert(json.errorMessage);
                } catch (e) {
                    alert(e.message);
                }
                return;
            }
        });

    }


